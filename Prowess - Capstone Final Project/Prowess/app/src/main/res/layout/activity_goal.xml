<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Goal"
    android:background="@drawable/gradient">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:textColor="#E93B3B"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/flexibility"
                android:layout_width="451dp"
                android:layout_height="245dp"
                app:srcCompat="@drawable/flexibility"
                android:onClick="OnFlexibility"
                />

            <ImageButton
                android:id="@+id/buildMuscle"
                android:layout_width="512dp"
                android:layout_height="258dp"
                app:srcCompat="@drawable/build"
                android:onClick="OnMuscle"
                />

            <ImageButton
                android:id="@+id/loseFat"
                android:layout_width="552dp"
                android:layout_height="235dp"
                app:srcCompat="@drawable/lose"
                android:onClick="OnFat"
                />
        </LinearLayout>

    </ScrollView>

    <ListView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/userID_goal"
        android:alpha="0.0"/>

    <TextView
        android:id="@+id/email_goal"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="250dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:layout_marginTop="0dp"
        android:textColor="#E93B3B"
        android:alpha="0.0"/>





</LinearLayout>