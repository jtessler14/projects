<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stretch"
    android:background="@drawable/gradient">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_back" />


    <EditText
        android:id="@+id/edit_text_input"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="205dp"
        android:hint="Minute(s)"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="#E93B3B"
        android:textColorHint="#E93B3B" />

    <Button
        android:id="@+id/button_set"
        android:layout_width="89dp"
        android:layout_height="86dp"
        android:layout_alignTop="@+id/edit_text_input"
        android:layout_marginTop="-33dp"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/edit_text_input"
        android:background="@drawable/round_button"
        android:text="Set" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="272dp"
        android:text="00:00"
        android:textColor="#E93B3B"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="89dp"
        android:layout_height="86dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button"
        android:text="start" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="89dp"
        android:layout_height="86dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-89dp"
        android:layout_marginTop="96dp"
        android:layout_toEndOf="@+id/button_start_pause"
        android:background="@drawable/round_button"
        android:text="reset"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E93B3B"
        android:text="Choose a Stretch"
        android:textSize="30dp"
        android:layout_marginTop="50dp"/>

    <Spinner
        android:id="@+id/Stretches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="95dp" />

    <TextView
        android:id="@+id/email_stretch"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:textColor="#E93B3B"
        android:alpha="0.0"/>

    <ListView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="700dp"
        android:id="@+id/userID_stretch"
        android:alpha="0.0"/>


</RelativeLayout>

